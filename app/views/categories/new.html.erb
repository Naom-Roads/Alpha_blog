
     <h1 class="text-center mt-4">Create a new Category</h1>
   <div class="container col-11">
  <div class="row justify-content-center">
    <div class="col-12">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-5 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category Name", class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class:"form-control shadow rounded", placeholder: "Enter a Name" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      <div class="mb-5">
        <%= link_to '[ Cancel and Return to Articles Listing ]', articles_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>
